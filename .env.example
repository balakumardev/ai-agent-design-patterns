# LLM API Configuration
# Choose one of the following configurations:

# Option 1: OpenAI API (recommended for beginners)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Option 2: LiteLLM (for local models or other providers)
# OPENAI_API_KEY=your_litellm_api_key_here
# OPENAI_BASE_URL=http://localhost:4000

# Option 3: Azure OpenAI
# AZURE_OPENAI_API_KEY=your_azure_openai_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Optional: Alternative LLM providers
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Vector Database Configuration (for RAG pattern)
CHROMA_PERSIST_DIRECTORY=./chroma_db
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment

# Web Search Configuration (for tool-using agent)
SERPER_API_KEY=your_serper_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# Logging Configuration
LOG_LEVEL=INFO

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60